<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="actor1" class="com.stackroute.domain.Actor" scope="prototype" >

        <constructor-arg name="name" value="Prabhas"></constructor-arg>
        <constructor-arg index = "1" value="male"></constructor-arg>
        <constructor-arg type="int" value="38"></constructor-arg>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor" scope="prototype" >
        <constructor-arg name="name" value="Mahesh" ></constructor-arg>
        <constructor-arg index = "1" value="male"></constructor-arg>
        <constructor-arg type="int" value="36"></constructor-arg>
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Amir"></constructor-arg>
        <constructor-arg index = "1" value="male"></constructor-arg>
        <constructor-arg type="int" value="52"></constructor-arg>
    </bean>


    <bean name="movie1" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>
    <bean id="movie3" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor3"></constructor-arg>
    </bean>

</beans>